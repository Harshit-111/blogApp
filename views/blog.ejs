<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Blog: <%= locals.blog.title %></title>
    <style>
        .author{
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        .userCommentContainer{
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body>
    <%- include("./partials/nav") %>
   
    <div class="container">
        <h1><%= blog.title %></h1>
        <img src=<%= blog.coverImageUrl %> width="100%" alt="...">
        <p><%= blog.body %></p>
        <div class="author">
            <h3>Author: </h3>

            <img src=<%= blog.createdBy.profileImageUrl %> alt="" width="50px">
            <h3><%= blog.createdBy.fullName %></h3>
        </div>
        <div class="commentContainer container mt-4">
            <h4>Comments(<%= comments.length %>)</h4>
            <div class="comments">
                <% comments.forEach(comment => { %>
                
                    <div class="userCommentContainer mt-1">
                        <div class="userDetails">
                            <h5>

                                <%= comment.author %> :
                            </h5>
                        </div>
                        <div class="userComment">
                            <%= comment.content %>
                        </div>
                    </div>
                
            <% }) %>
            </div>
            <div class="newComment mt-2">
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        
                        <input type="text" class="form-control" name="content" placeholder="Your Comment...">
                        
                      </div>
                      <button type="submit" class="btn btn-primary">Post</button>
                </form>
            </div>
        </div>
    </div>

<%- include("./partials/scripts") %>
    
</body>
</html>